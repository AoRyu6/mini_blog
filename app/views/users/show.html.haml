.mt-4
  %div.row
    %div.col-12.col-md-6.col-lg-4
      %div.d-flex.flex-column.flex-md-row.align-items-start.border.p-2.rounded
        %i.bi.bi-person-circle.display-4.me-md-3.mb-2.mb-md-0
        %div
          %h3.mb-0= @user.name
          %span.text-muted= @user.biography
          = link_to(@user.blog_url.to_s, class: "link-primary d-flex align-items-center mt-2") do
            %span.bi.bi-link-45deg.me-2.text-secondary{ aria: { label: "Link icon" } }
              = @user.blog_url
          = render("shared/stats")
          = render("follow_form") if user_signed_in?
          - if user_signed_in? && current_user == @user
            .mt-2
              = link_to("プロフィールの編集", edit_user_registration_path, class: "btn btn-dark btn-sm")

    %div.col-12.col-md-6.col-lg-8
      = render 'shared/posts'

      .mt-2
        = pagy_bootstrap_nav(@pagy).html_safe